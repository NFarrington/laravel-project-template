{
    "name": "nfarrington/laravel-project-template",
    "type": "project",
    "description": "Project template for the Laravel framework.",
    "keywords": [
        "framework",
        "laravel",
        "template"
    ],
    "license": "MIT",
    "require": {
        "doctrine/dbal": "^2.9",
        "php": "^7.2",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "^6.2",
        "laravel/tinker": "^2.0"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.2",
        "barryvdh/laravel-ide-helper": "^2.5",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0",
        "phpunit/phpunit": "^8.0"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "tests/helpers.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "ide-helper": [
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan ide-helper:models --reset --write"
        ],
        "deploy-prod": [
            "npm install",
            "php artisan down --retry=120",
            "@install-prod",
            "php artisan config:cache",
            "php artisan route:cache",
            "php artisan cache:clear",
            "php artisan migrate --step --force --no-interaction",
            "npm run production",
            "@log-rotate",
            "php artisan up"
        ],
        "install-prod": "composer install --no-dev --optimize-autoloader --classmap-authoritative",
        "deploy-dev": [
            "npm install",
            "php artisan down",
            "composer install",
            "php artisan config:clear",
            "php artisan route:clear",
            "php artisan cache:clear",
            "php artisan migrate --step --force --no-interaction",
            "npm run development",
            "@log-rotate",
            "php artisan up"
        ],
        "log-rotate": "if [ -f storage/logs/laravel.log ]; then mv storage/logs/laravel.log storage/logs/laravel.log.`date +%s`; fi"
    }
}
